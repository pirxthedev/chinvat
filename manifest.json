{
  "manifest_version": 3,
  "name": "chinvat",
  "description": "A chrome extension bridging nostr to the rest of the web",
  "version": "0.1.0",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": "images/chinvat_icon_128.png"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/chinvat_icon_16.png",
    "32": "images/chinvat_icon_32.png",
    "48": "images/chinvat_icon_48.png",
    "128": "images/chinvat_icon_128.png"
  }
}